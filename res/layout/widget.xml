<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAFFFFFF" >

    <RelativeLayout
        android:id="@+id/widget_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/widget_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_widget" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/widget_app_icon"
            android:text="@string/app_name"
            android:textColor="#555555"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/ic_menu_add" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/widget_line"
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:layout_below="@+id/widget_relativelayout"
        android:background="#33B5E5" >
    </LinearLayout>

    <ListView
        android:id="@+id/widget_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/widget_line"
        android:background="#FFFFFF"
        android:divider="#CCCCCC"
        android:dividerHeight="1px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:layout_alignParentBottom="true"
        android:background="#33B5E5" >
    </LinearLayout>

</RelativeLayout>